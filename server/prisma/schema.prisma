generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Locations {
  id          Int             @id @default(autoincrement())
  city        String
  createdAt   DateTime        @default(now())
  description String?
  name        String
  state       State
  street      String
  updatedAt   DateTime        @default(now()) @updatedAt
  zipcode     String
  phoneNumber String
  website     String?
  theme       String?         @db.VarChar(255)
  type        String?         @db.VarChar(255)
  hours       BusinessHours[]
  photos      Photos[]
  Pricing     Pricing[]
}

model Photos {
  id         Int       @id @default(autoincrement())
  url        String
  uploadedAt DateTime  @default(now())
  locationId Int
  location   Locations @relation(fields: [locationId], references: [id])

  @@index([locationId], map: "Photos_locationId_fkey")
}

model BusinessHours {
  id         Int       @id @default(autoincrement())
  day        String
  openTime   String
  closeTime  String
  locationId Int
  location   Locations @relation(fields: [locationId], references: [id])

  @@index([locationId], map: "BusinessHours_locationId_fkey")
}

model Pricing {
  id         Int       @id @default(autoincrement())
  category   String
  amount     Float
  locationId Int
  Locations  Locations @relation(fields: [locationId], references: [id])

  @@index([locationId], map: "Pricing_locationId_fkey")
}

